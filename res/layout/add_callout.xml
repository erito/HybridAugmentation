<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <EditText android:id="@+id/pointname"
              android:layout_width="150dp"
              android:layout_height="50dp"
              android:hint="Name for this Point" />
    <Button android:id="@+id/addbutton"
            android:drawableLeft="@drawable/contentnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pointname"
            android:text="Add"
            />
    <EditText android:id="@+id/pointdescr"
              android:layout_width="match_parent"
              android:layout_height="150 dp"
              android:hint="Description"
              android:inputType="textMultiLine"
              />
</RelativeLayout>